<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemEjercicio1"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:background="@drawable/gray_background">

            <TextView
                android:id="@+id/btnSwitchFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="start"
                android:text="Burpees"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@id/cajaSeriesYRep"
                app:layout_constraintEnd_toStartOf="@id/guideline2"
                app:layout_constraintStart_toStartOf="@id/itemEjercicio1"
                app:layout_constraintTop_toTopOf="@id/itemEjercicio1" />

            <LinearLayout
                android:id="@+id/cajaSeriesYRep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@id/guideline2"
                app:layout_constraintStart_toStartOf="@id/itemEjercicio1"
                app:layout_constraintTop_toBottomOf="@id/btnSwitchFragment"
                tools:ignore="ExtraText">

                <TextView
                    android:id="@+id/numSeries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="2"
                    android:textSize="12sp" />
                "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="  series de  "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/numRepet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="12"
                    android:textSize="12sp" />
                "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="  repeticions "
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/cajaPlayContador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@id/itemEjercicio1"
                app:layout_constraintEnd_toEndOf="@id/itemEjercicio1"
                app:layout_constraintHorizontal_bias="0.80"
                app:layout_constraintStart_toEndOf="@id/guideline2"
                app:layout_constraintTop_toTopOf="@id/itemEjercicio1"
                app:layout_constraintVertical_bias="0.384">

                <ImageView
                    android:id="@+id/videoEj1"
                    android:layout_width="40dp"
                    android:layout_height="34dp"
                    android:layout_marginEnd="2dp"
                    android:src="@drawable/boton_video" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cajaContador"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/white_background"
                    app:layout_constraintBottom_toBottomOf="@id/itemEjercicio1"
                    app:layout_constraintEnd_toEndOf="@id/itemEjercicio1"
                    app:layout_constraintStart_toEndOf="@id/cajaSeriesYRep"
                    app:layout_constraintTop_toBottomOf="@id/videoEj1">

                    <TextView
                        android:id="@+id/contador"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="1" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="196dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>



    <!-- Add other views as needed -->

</RelativeLayout>
