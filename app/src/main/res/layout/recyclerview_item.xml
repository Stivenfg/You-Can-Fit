<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemEjercicio1"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:background="@drawable/gray_background"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/btnSwitchFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="start"
                android:text="Burpees"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@id/itemEjercicio1"
                app:layout_constraintHorizontal_bias="0.107"
                app:layout_constraintStart_toStartOf="@id/itemEjercicio1"
                app:layout_constraintTop_toTopOf="@id/itemEjercicio1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 repeticiones"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/itemEjercicio1"
                app:layout_constraintHorizontal_bias="0.107"
                app:layout_constraintStart_toStartOf="@id/itemEjercicio1"
                app:layout_constraintTop_toBottomOf="@id/btnSwitchFragment" />

            <ImageView
                android:id="@+id/videoEj1"
                android:layout_width="40dp"
                android:layout_height="34dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/boton_video"
                app:layout_constraintBottom_toBottomOf="@id/itemEjercicio1"
                app:layout_constraintEnd_toEndOf="@id/itemEjercicio1"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/btnSwitchFragment"
                app:layout_constraintTop_toTopOf="@id/itemEjercicio1"
                app:layout_constraintVertical_bias="0.384" />

        </androidx.constraintlayout.widget.ConstraintLayout>




    </LinearLayout>



    <!-- Add other views as needed -->

</RelativeLayout>
