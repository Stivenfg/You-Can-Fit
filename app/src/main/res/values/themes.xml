<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.YouCanFit" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/red_fit</item>
        <item name="colorPrimaryVariant">@color/gray_dark_fit</item>
        <item name="colorOnPrimary">@color/black_fit</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/red_fit</item>
        <item name="itemIconTint">@color/white_fit</item>

    </style>

    <style name="Theme.YouCanFit" parent="Base.Theme.YouCanFit">
        <item name="colorPrimary">@color/red_fit</item>
        <item name="colorPrimaryVariant">@color/gray_dark_fit</item>
        <item name="colorOnPrimary">@color/black_fit</item>

    </style>

    <style name="Theme.YouCanFit.Fullscreen" parent="Theme.YouCanFit">
        <item name="android:actionBarStyle">@style/Widget.Theme.YouCanFit.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.YouCanFit.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>